<Window x:Class="Terminalis.Views.RawOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raw output" Height="400" Width="700"
        WindowStartupLocation="Manual"
        MinHeight="200" MinWidth="300"
        Background="{DynamicResource WindowBackground}"
        FlowDirection="LeftToRight">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="4" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Grid Background="{DynamicResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title bar with close button -->
        <Border Grid.Row="0" Background="{DynamicResource MenuBackground}" PreviewMouseLeftButtonDown="TitleBar_PreviewMouseLeftButtonDown">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="TitleTextBlock" Text="Raw output" VerticalAlignment="Center" Margin="12,0"
                           Foreground="{DynamicResource MenuForeground}" FontWeight="SemiBold"/>
                <Button Grid.Column="1" x:Name="CloseButton" Content="r" Width="46" Height="32"
                        Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0"
                        Foreground="{DynamicResource MenuForeground}"
                        FontFamily="Marlett" FontSize="12"
                        Cursor="Hand"
                        MouseEnter="CloseButton_MouseEnter" MouseLeave="CloseButton_MouseLeave"/>
            </Grid>
        </Border>
        <TextBlock Grid.Row="1" x:Name="HintTextBlock" Margin="8,8,8,6"
                   Text="Read-only raw server data. Select and copy with Ctrl+C."
                   Foreground="{DynamicResource WindowForeground}" FontSize="12" TextWrapping="Wrap"/>
        <TextBox Grid.Row="2" x:Name="RawTextBox" Margin="8,0,8,8"
                 IsReadOnly="True" AcceptsReturn="True" AcceptsTab="False"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" FontSize="12"
                 Padding="6"
                 Background="{DynamicResource TextBoxBackground}"
                 Foreground="{DynamicResource TextBoxForeground}"
                 BorderBrush="{DynamicResource TextBoxBorder}"
                 BorderThickness="1"
                 TextWrapping="Wrap"
                 FlowDirection="LeftToRight"/>
    </Grid>
</Window>
