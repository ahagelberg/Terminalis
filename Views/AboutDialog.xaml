<Window x:Class="TabbySSH.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About TabbySSH" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="{Binding ProgramName}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" 
                   Text="{Binding Description}" 
                   FontSize="12" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"
                   TextAlignment="Center"/>
        
        <TextBlock Grid.Row="2" 
                   Text="{Binding VersionText}" 
                   FontSize="11" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="3" 
                   Text="{Binding CreatorText}" 
                   FontSize="11" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="4" 
                   Text="{Binding CopyrightText}" 
                   FontSize="10" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="Gray"/>
        
        <Button Grid.Row="6" 
                Content="OK" 
                Width="75" 
                Height="25" 
                HorizontalAlignment="Center"
                Click="OkButton_Click"
                IsDefault="True"/>
    </Grid>
</Window>


