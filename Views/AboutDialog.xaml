<Window x:Class="Terminalis.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Terminalis" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource WindowBackground}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="4" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Background="{DynamicResource WindowBackground}">
        <Grid Margin="20" Background="{DynamicResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="{Binding ProgramName}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource WindowForeground}"/>
        
        <TextBlock Grid.Row="1" 
                   Text="{Binding Description}" 
                   FontSize="12" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Foreground="{DynamicResource WindowForeground}"/>
        
        <TextBlock Grid.Row="2" 
                   Text="{Binding VersionText}" 
                   FontSize="11" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource WindowForeground}"/>
        
        <TextBlock Grid.Row="3" 
                   Text="{Binding CreatorText}" 
                   FontSize="11" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource WindowForeground}"/>
        
        <TextBlock Grid.Row="4" 
                   Text="{Binding CopyrightText}" 
                   FontSize="10" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource BorderColorDark}"/>
        
        <TextBlock Grid.Row="5" 
                   Text="License (MIT):" 
                   FontSize="11" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left" 
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource WindowForeground}"/>
        
        <ScrollViewer Grid.Row="6" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Margin="0,0,0,10"
                     MaxHeight="200">
            <TextBlock Text="{Binding LicenseText}" 
                       FontSize="9" 
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource WindowForeground}"/>
        </ScrollViewer>
        
        <Button Grid.Row="7" 
                Content="OK" 
                Width="75" 
                Height="25" 
                HorizontalAlignment="Center"
                Click="OkButton_Click"
                IsDefault="True"
                Background="{DynamicResource ButtonBackground}" Foreground="{DynamicResource ButtonForeground}"
                BorderBrush="{DynamicResource ButtonBorder}"/>
        </Grid>
    </Border>
</Window>


