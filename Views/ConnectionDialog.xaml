<Window x:Class="TabbySSH.Views.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:views="clr-namespace:TabbySSH.Views"
        mc:Ignorable="d"
        Title="Session Configuration" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <views:BoolToIntConverter x:Key="BoolToIntConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Session Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <GroupBox x:Name="ConnectionGroupBox" Header="Connection" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="NameTextBox" Margin="10,0,0,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Host:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="HostTextBox" Margin="10,0,0,0"/>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Port:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="PortTextBox" Margin="10,0,0,0" Text="22"/>
                </Grid>
            </StackPanel>
        </GroupBox>

                <GroupBox x:Name="AuthenticationGroupBox" Header="Authentication" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="UsernameTextBox" Margin="10,0,0,0"/>
                </Grid>
                <RadioButton x:Name="PasswordAuthRadio" Content="Password" IsChecked="True" Margin="0,10,0,5" Checked="PasswordAuthRadio_Checked" Unchecked="KeyAuthRadio_Checked"/>
                <Grid x:Name="PasswordGrid" Margin="20,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Password:" VerticalAlignment="Center"/>
                    <PasswordBox Grid.Column="1" x:Name="PasswordBox" Margin="10,0,0,0"/>
                </Grid>
                <RadioButton x:Name="KeyAuthRadio" Content="Private Key" Margin="0,5" Checked="KeyAuthRadio_Checked" Unchecked="PasswordAuthRadio_Checked"/>
                <Grid Margin="20,5,0,5" IsEnabled="{Binding IsChecked, ElementName=KeyAuthRadio}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Key File:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="PrivateKeyPathTextBox" Margin="10,0,10,0" IsReadOnly="True"/>
                    <Button Grid.Column="2" Content="Browse..." x:Name="BrowseKeyButton" Padding="10,5" Click="BrowseKeyButton_Click"/>
                </Grid>
                <Grid Margin="20,5,0,5" IsEnabled="{Binding IsChecked, ElementName=KeyAuthRadio}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Passphrase:" VerticalAlignment="Center"/>
                    <PasswordBox Grid.Column="1" x:Name="PrivateKeyPassphraseBox" Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Terminal Appearance" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Font Family:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="FontFamilyComboBox" Margin="10,0,0,0" IsEditable="True" PreviewMouseDown="FontFamilyComboBox_PreviewMouseDown">
                        <ComboBoxItem Content="Consolas"/>
                        <ComboBoxItem Content="Courier New"/>
                        <ComboBoxItem Content="Lucida Console"/>
                        <ComboBoxItem Content="Monaco"/>
                        <ComboBoxItem Content="DejaVu Sans Mono"/>
                        <ComboBoxItem Content="Source Code Pro"/>
                    </ComboBox>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Font Size:" VerticalAlignment="Center"/>
                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="FontSizeTextBox" Text="12" VerticalContentAlignment="Center" Padding="5,0"/>
                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Stretch">
                            <RepeatButton x:Name="FontSizeUpButton" Content="▲" Width="20" Height="12" FontSize="8" Padding="0" Click="FontSizeUpButton_Click" VerticalAlignment="Top"/>
                            <RepeatButton x:Name="FontSizeDownButton" Content="▼" Width="20" Height="12" FontSize="8" Padding="0" Click="FontSizeDownButton_Click" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Foreground Color:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Border x:Name="ForegroundColorBox" 
                                Width="50" Height="25" 
                                BorderBrush="Gray" BorderThickness="1" 
                                Background="LightGray" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="ForegroundColorBox_MouseLeftButtonDown"
                                VerticalAlignment="Center"/>
                        <Button Content="(Default)" Margin="10,0,0,0" Padding="5,2" Click="ForegroundColorDefaultButton_Click" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Background Color:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Border x:Name="BackgroundColorBox" 
                                Width="50" Height="25" 
                                BorderBrush="Gray" BorderThickness="1" 
                                Background="Black" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="BackgroundColorBox_MouseLeftButtonDown"
                                VerticalAlignment="Center"/>
                        <Button Content="(Default)" Margin="10,0,0,0" Padding="5,2" Click="BackgroundColorDefaultButton_Click" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Accent Color:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Border x:Name="AccentColorBox" 
                                Width="50" Height="25" 
                                BorderBrush="Gray" BorderThickness="1" 
                                Background="Transparent" 
                                Cursor="Hand" 
                                MouseLeftButtonDown="AccentColorBox_MouseLeftButtonDown"
                                VerticalAlignment="Center"/>
                        <Button Content="(Default)" Margin="10,0,0,0" Padding="5,2" Click="AccentColorDefaultButton_Click" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="ConnectionOptionsGroupBox" Header="Connection Options" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Keep-Alive (sec):" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="KeepAliveTextBox" Margin="10,0,0,0" Text="30"/>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Timeout (sec):" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="TimeoutTextBox" Margin="10,0,0,0" Text="30"/>
                </Grid>
                <CheckBox x:Name="CompressionCheckBox" Content="Enable Compression" Margin="0,5" IsChecked="True"/>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Line Ending:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="LineEndingComboBox" Margin="10,0,0,0" SelectedIndex="0">
                        <ComboBoxItem Content="Unix (LF)" Tag="\n"/>
                        <ComboBoxItem Content="Windows (CRLF)" Tag="\r\n"/>
                    </ComboBox>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Bell Notification:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="BellNotificationComboBox" Margin="10,0,0,0" SelectedIndex="0">
                        <ComboBoxItem Content="Flash"/>
                        <ComboBoxItem Content="Sound"/>
                        <ComboBoxItem Content="None"/>
                    </ComboBox>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Resize Method:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="TerminalResizeMethodComboBox" Margin="10,0,0,0" SelectedIndex="0">
                        <ComboBoxItem Content="SSH (Recommended)" Tag="SSH"/>
                        <ComboBoxItem Content="ANSI" Tag="ANSI"/>
                        <ComboBoxItem Content="STTY" Tag="STTY"/>
                        <ComboBoxItem Content="XTERM" Tag="XTERM"/>
                        <ComboBoxItem Content="None" Tag="NONE"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="ForwardingGroupBox" Header="Forwarding" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="X11ForwardingCheckBox" Content="Enable X11 Forwarding" Margin="0,5" IsChecked="True"/>
                <TextBlock Text="Port Forwarding" FontWeight="Bold" Margin="0,15,0,5"/>
                <DataGrid x:Name="PortForwardingDataGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" Height="150" Margin="0,5">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                        <DataGridTemplateColumn Header="Type" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TypeDisplay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedIndex="{Binding IsLocal, Converter={StaticResource BoolToIntConverter}}" SelectionChanged="TypeComboBox_SelectionChanged" Loaded="TypeComboBox_Loaded">
                                        <ComboBoxItem Content="Local"/>
                                        <ComboBoxItem Content="Remote"/>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Local Host" Binding="{Binding LocalHost}" Width="90"/>
                        <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="75"/>
                        <DataGridTextColumn Header="Remote Host" Binding="{Binding RemoteHost}" Width="90"/>
                        <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="75"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Content="Add Local Forward" x:Name="AddLocalForwardButton" Padding="10,5" Margin="0,0,5,0" Click="AddLocalForwardButton_Click"/>
                    <Button Content="Add Remote Forward" x:Name="AddRemoteForwardButton" Padding="10,5" Click="AddRemoteForwardButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="OK" x:Name="ConnectButton" 
                    Click="ConnectButton_Click" Padding="15,5" Margin="0,0,10,0" IsDefault="True"/>
            <Button Grid.Column="2" Content="Cancel" x:Name="CancelButton" 
                    Click="CancelButton_Click" Padding="15,5" IsCancel="True"/>
        </Grid>
    </Grid>
</Window>

