<Window x:Class="TabbySSH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabbySSH"
        xmlns:views="clr-namespace:TabbySSH.Views"
        mc:Ignorable="d"
        Title="TabbySSH" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="_File">
                <MenuItem Header="_New Tab" x:Name="NewTabMenuItem" Click="NewTabMenuItem_Click" InputGestureText="Ctrl+T"/>
                <MenuItem Header="_Close Tab" x:Name="CloseTabMenuItem" Click="CloseTabMenuItem_Click" InputGestureText="Ctrl+W"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Next Tab" x:Name="NextTabMenuItem" Click="NextTabMenuItem_Click" InputGestureText="Ctrl+Tab"/>
                <MenuItem Header="_Previous Tab" x:Name="PreviousTabMenuItem" Click="PreviousTabMenuItem_Click" InputGestureText="Ctrl+Shift+Tab"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Options..." x:Name="OptionsMenuItem" Click="OptionsMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." x:Name="AboutMenuItem" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <views:SessionManagerPanel x:Name="SessionManagerPanel" Grid.Row="1" Grid.Column="0"/>

        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" 
                      HorizontalAlignment="Stretch" Background="LightGray"
                      ResizeBehavior="PreviousAndNext"/>

        <TabControl x:Name="TerminalTabs" Grid.Row="1" Grid.Column="2" 
                    SelectionChanged="TerminalTabs_SelectionChanged"/>

        <StatusBar Grid.Row="2" Grid.ColumnSpan="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <Border x:Name="NotificationBorder" Grid.Row="1" Grid.Column="2" 
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" Padding="15,10" Background="#E0E0E0"
                BorderBrush="#999999" BorderThickness="1"
                CornerRadius="5" Visibility="Collapsed"
                Opacity="0.9">
            <StackPanel Orientation="Horizontal">
                <Ellipse x:Name="NotificationIcon" Width="12" Height="12" 
                         Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="NotificationText" VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
